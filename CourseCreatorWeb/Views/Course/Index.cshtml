@model List<Course>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Course Catalog</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">

            </div>
            <div class="col-6 text-end">
                <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Course
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Subject
                    </th>
                    <th>
                        Course Name
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Subject))
                {
                    <tr>
                        <td>@obj.Subject</td>
                        <td>@obj.Title
                            <div class="">
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@obj.Id" class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Course Description</a>
                            </div>
                        </td>

                        <!-- Adding edit/delete buttons -->
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Course" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Course" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td> 
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>